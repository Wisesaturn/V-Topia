{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prefer-const": "off",
    "no-restricted-globals": "off",
    "no-undef": "off",
    "no-new": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", ["sibling", "parent", "index"], "unknown"],
        "pathGroups": [
          {
            "pattern": "./**/index.js",
            "group": "external"
          },
          {
            "pattern": "./**/style.css",
            "group": "builtin"
          }
        ],
        "newlines-between": "always"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never"
      }
    ],
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "arrow-body-style": "off",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      },
      "alias": {
        "map": [
          ["@styles", "./src/styles"],
          ["@pages", "./src/pages"],
          ["@components", "./src/components"],
          ["@assets", "./src/assets"],
          ["@routes", "./src/routes"],
          ["@utils", "./src/utils"]
        ],
        "extensions": [".js"]
      }
    }
  }
}
